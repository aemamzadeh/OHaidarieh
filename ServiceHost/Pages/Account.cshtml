</head>
<body>


    <div class="wrapper-page">
        <div class="panel panel-color panel-primary panel-pages">
            <div class="panel-heading bg-img">
                <div class="bg-overlay"></div>
                <h3 class="text-center m-t-10 text-white"> ورود به <strong>پنل مدیریت سایت</strong> </h3>
            </div>


            <div class="panel-body">
                <form method="post" class="form-horizontal m-t-20" asp-page-handler="login">

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control input-lg " name="Username" id="username" type="text" required="" autocomplete="on" placeholder="نام کاربری">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control input-lg" name="Password" type="password" id="password" required="" autocomplete="on" placeholder="کلمه عبور">
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="col-xs-12">
                            <div class="checkbox checkbox-primary">
                                <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup">مرا بخاطر بسپار</label>
                            </div>

                        </div>
                    </div>

                    <div class="form-group text-center m-t-40">
                        <div class="col-xs-12">
                                <button class="btn btn-primary btn-lg w-lg waves-effect waves-light" type="submit">ورود</button>
                        </div>
                    </div>

                    @*<div class="form-group m-t-30">
                        <div class="col-sm-7">
                            <a href="recoverpw.html"><i class="fa fa-lock m-r-5"></i> فراموشی رمز عبور</a>
                        </div>
                        <div class="col-sm-5 text-right">
                            <a asp-page="register">ثبت نام</a>
                        </div>
                    </div>*@
                </form>
                @if (Model.Message != null)
                {
            <div class="alert alert-danger">@Model.Message</div>}
            </div>

        </div>
    </div>


    <script>
        var resizefunc = [];
    </script>
    <script src="~/admintheme/assets/js/jquery.min.js"></script>
    <script src="~/admintheme/assets/js/bootstrap.min.js"></script>
    <script src="~/admintheme/assets/js/waves.js"></script>
    <script src="~/admintheme/assets/js/wow.min.js"></script>
    <script src="~/admintheme/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/admintheme/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/admintheme/assets/jquery-detectmobile/detect.js"></script>
    <script src="~/admintheme/assets/fastclick/fastclick.js"></script>
    <script src="~/admintheme/assets/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="~/admintheme/assets/jquery-blockui/jquery.blockUI.js"></script>


    <!-- CUSTOM JS -->
    <script src="~/admintheme/assets/js/jquery.app.js"></script>

</body>
</html>




