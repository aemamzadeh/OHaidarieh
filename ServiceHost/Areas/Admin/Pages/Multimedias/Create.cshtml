@model Haidarieh.Application.Contracts.Multimedia.CreateMultimedia
@{ }

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد فایل جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CeremonyId" class="control-label">مراسم</label>
                    <select type="text" class="form-control" id="cerList" asp-for="CeremonyId" asp-items='new SelectList(Model.Ceremonies,"Id","Title")' onchange="FillSerializeDropdown('CeremonyId','FillCeremonyGuests','GuestId')">
                        <option value="0">انتخاب مراسم</option>
                    </select>
                    <span asp-validation-for="CeremonyId" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="GuestId" class="control-label">میهمان</label>
                    @*<select type="text" class="form-control" id="gstList" asp-for="GuestId" asp-items='new SelectList(Model.Guests,"Id","Title")'>*@
                    <select class="form-control" asp-for="GuestId">
                        <option value="0">انتخاب میهمان</option>
                    </select>
                    <span asp-validation-for="GuestId" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="FileAddress" class="control-label">فایل</label>
                    <input type="file" multiple="multiple" class="form-control" asp-for="FileAddress">
                    <span asp-validation-for="FileAddress" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="progress" id="progress" style="display: none">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FileTitle" class="control-label">عنوان فایل</label>
                    <input type="text" class="form-control" asp-for="FileTitle" onchange="fillField('FileTitle', 'FileAlt')" />
                    <span asp-validation-for="FileTitle" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FileAlt" class="control-label">عنوان فایل در گوگل</label>
                    <input type="text" class="form-control" asp-for="FileAlt">
                    <span asp-validation-for="FileAlt" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>

@section Scripts
{
    <script src="~/AdminTheme/assets/js/site.js"></script>

    <script>
        $("#ddlIncidents").change(function () {
            var value = $(this).children(":selected").attr("id");
            console.log(value);
            $("#selectedItem").text(value);
        });

    </script>
}

