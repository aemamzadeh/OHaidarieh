@page
@model ServiceHost.Areas.Admin.Pages.Multimedias.EditAlbumModel
@{
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">ویرایش فایلهای چندرسانه ای </h3>
            </div>
            <div class="panel-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>عکس</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int m = Model.Command.Count % 4;}
                                    @{ int k = Model.Command.Count - 1;}
                                    @{ int t = 0;}
                                    @if (m == 0)
                                    {
                                        @for (int i = 0; i < Model.Command.Count / 4; i++)
                                        {
                                            <tr>
                                                @for (int j = 0; j < 4; j++)
                                                {
                                                    <td>
                                                        <img src="~/@Model.Command[j].FileAddress" style="width: 70px; height: 70px" />
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning pull-right m-rl-5" asp-page="EditAlbum" asp-page-handler="Delete" asp-route-id="@Model.Command[j].Id">
                                                            <i class="fa fa-edit"></i>حذف
                                                        </a>
                                                        <input type="hidden" asp-for="@Model.Command[j].CeremonyId" value="@Model.Command[j].CeremonyId">
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < Model.Command.Count / 4 + 1; i++)
                                        {
                                            t = 0;
                                            <tr>
                                                @while (t < 4 && k >= 0)
                                                {
                                                    <td>
                                                        <img src="~/@Model.Command[k].FileAddress" style="width: 70px; height: 70px" />
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning pull-right m-rl-5" asp-page="EditAlbum" asp-page-handler="Delete" asp-route-id="@Model.Command[k].Id">
                                                            <i class="fa fa-edit"></i>حذف
                                                        </a>
                                                        <input type="hidden" asp-for="@Model.Command[k].CeremonyId" value="@Model.Command[k].CeremonyId">
                                                    </td>
                                                    t += 1;
                                                    k -= 1;
                                                }
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*<input type="hidden" asp-for="MVM.CeremonyId" value="@Model.MVM.CeremonyId">*@

                </form>
            </div>
        </div>
    </div>
</div>

