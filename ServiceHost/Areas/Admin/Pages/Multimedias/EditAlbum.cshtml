@page
@model ServiceHost.Areas.Admin.Pages.Multimedias.EditAlbumModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ویرایش فایلهای چندرسانه ای";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./EditAlbum", "Add", new { id = Model.ViewBag })">اضافه نمودن فایل چندرسانه ای </a>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> ویرایش فایلهای آلبوم </h3>
            </div>
            <div class="panel-body">
                <form method="get" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>عکس</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int m = Model.Command.Count % 4;}
                                    @{ int k = Model.Command.Count - 1;}
                                    @{ int t = 0;}

                                    @if (m == 0)
                                    {
                                        @for (int i = 0; i < Model.Command.Count / 4; i++)
                                        {
                                            <tr>
                                                @for (int j = 0; j < 4; j++)
                                                {
                                                    <td>

                                                        @if (Model.Command[t].ContentType.StartsWith("audio/"))
                                                        {

                                                            <a data-fancybox="gallery" data-caption="@Model.Command[t].Title" href="~/@Model.Command[t].FileAddress" data-type="video" style="width: 70px; height: 70px;">
                                                                <img src="~/Theme/assets/images/video__player__movie.jpg" style="width: 70px; height: 70px;" />

                                                            </a>
                                                        }
                                                        else if (Model.Command[t].ContentType.StartsWith("video/"))
                                                        {
                                                            <a data-fancybox="gallery" data-caption="@Model.Command[t].Title" href="~/@Model.Command[t].FileAddress">
                                                                <img src="~/Theme/assets/images/film.png" style="width: 70px; height: 70px" />
                                                            </a>
                                                        }
                                                        else if (Model.Command[t].ContentType.StartsWith("image/"))
                                                        {
                                                            <a data-fancybox="gallery" data-caption="@Model.Command[t].Title" href="~/@Model.Command[t].FileAddress">
                                                                <img src="~/@Model.Command[t].FileAddress" style="width: 70px; height: 70px" />
                                                            </a>
                                                        }

                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning pull-right m-rl-5" asp-page="./EditAlbum" asp-page-handler="Remove" asp-route-id="@Model.Command[t].Id" asp-route-ceremonyId="@Model.Command[j].CeremonyId">
                                                            <i class="fa fa-edit"></i>حذف
                                                        </a>
                                                        <input type="hidden" asp-for="@Model.Command[t].CeremonyId" value="@Model.Command[t].CeremonyId">
                                                    </td>
                                                    t += 1;
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        @for (int i = 0; i < Model.Command.Count / 4 + 1; i++)
                                        {
                                            t = 0;
                                            <tr>
                                                @while (t < 4 && k >= 0)
                                                {
                                                    <td>
                                                        @if (Model.Command[k].ContentType.StartsWith("audio/"))
                                                        {

                                                            <a data-fancybox="gallery" data-caption="@Model.Command[k].Title" href="~/@Model.Command[k].FileAddress" data-type="video" style="width: 70px; height: 70px;">
                                                                <img src="~/Theme/assets/images/video__player__movie.jpg" style="width: 70px; height: 70px;" />
                                                            </a>
                                                        }
                                                        else if (Model.Command[k].ContentType.StartsWith("video/"))
                                                        {
                                                            <a data-fancybox="gallery" data-caption="@Model.Command[k].Title" href="~/@Model.Command[k].FileAddress">
                                                                <img src="~/Theme/assets/images/film.png" style="width: 70px; height: 70px" />
                                                            </a>
                                                        }
                                                        else if (Model.Command[k].ContentType.StartsWith("image/"))
                                                        {
                                                            <a data-fancybox="gallery" data-caption="@Model.Command[k].Title" href="~/@Model.Command[k].FileAddress">
                                                                <img src="~/@Model.Command[k].FileAddress" style="width: 70px; height: 70px" />
                                                            </a>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-warning pull-right m-rl-5" asp-page="EditAlbum" asp-page-handler="Remove" asp-route-id="@Model.Command[k].Id" asp-route-ceremonyId="@Model.Command[k].CeremonyId">
                                                            <i class="fa fa-edit"></i>حذف
                                                        </a>
                                                        <input type="hidden" asp-for="@Model.Command[k].CeremonyId" value="@Model.Command[k].CeremonyId">
                                                    </td>
                                                    t += 1;
                                                    k -= 1;
                                                }
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    @*<input type="hidden" asp-for="MVM.CeremonyId" value="@Model.MVM.CeremonyId">*@

                </form>
            </div>
        </div>
    </div>
</div>
