@inject _0_Framework.Application.IAuthHelper AuthHelper;
@{ var currentAccount = AuthHelper.CurrentUserInfo(); }

<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                @if (currentAccount.ProfilePhoto !="NoImage")
                {
    <img src="~/@currentAccount.ProfilePhoto" alt="" class="thumb-md img-circle img-responsive"> }
else
{
<img src="~/AdminTheme/Images/male_avatar-512.png" alt="" class="thumb-md img-circle img-responsive">}
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@currentAccount.Fname <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-page="/Account" asp-page-handler="Logout"><i class="md md-settings-power"></i> خروج</a></li>
                    </ul>
                </div>

                <p class="text-muted m-0">@currentAccount.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="index" class="waves-effect active"><i class="md md-home"></i><span> داشبورد </span></a>
                </li>
                @if (AuthHelper.CurrentAccountRole() == "2")
                {
    <li class="has_sub">
        <a href="#" class="waves-effect"><i class="md md-event"></i><span>  مراسمات </span><span class="pull-right"><i class="md md-add"></i></span></a>
        <ul class="list-unstyled">
            <li><a asp-page="/Ceremonies/Index">مراسم</a></li>
        </ul>
    </li>
}

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-announcement"></i><span>  میهمانان مراسمات </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/CeremonyGuests/Index">میهمانان هر مراسم</a></li>
                    </ul>
                </li>
                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-people"></i><span> خادمین اهل بیت ع </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Sponsors/Index">خادمین</a></li>
                    </ul>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-speaker"></i><span> میهمانان </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Guests/Index">میهمان</a></li>
                    </ul>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-multitrack-audio"></i><span> فایلهای چندرسانه ای </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Multimedias/Index">چندرسانه ای</a></li>
                    </ul>
                </li>

                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-wallet-membership"></i><span> اعضاء </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Members/Index">عضویت</a></li>
                    </ul>
                </li>
                @if (AuthHelper.CurrentAccountRole() == "2")
                {
    <li class="has_sub">
        <a class="waves-effect"><i class="md md-verified-user"></i><span> مدیریت کاربران </span><span class="pull-right"><i class="md md-add"></i></span></a>
        <ul class="list-unstyled">
            <li><a asp-page="/Accounts/Index">تعریف کاربران</a></li>
            <li><a asp-page="/Roles/Index">تعریف نقشها</a></li>
        </ul>
    </li>
}
                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-report"></i><span> گزارش </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Report/Report">گزارش مراسم</a></li>
                    </ul>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
