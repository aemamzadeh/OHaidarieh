@page
@model ServiceHost.Areas.Admin.Pages.Report.ReportModel
@{Layout = "Shared/_AdminLayout";
    ViewData["title"] = "گزارش مراسمات";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">گزارش مجالس</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>عکس</th>
                                    <th>تاریخ برگزاری</th>
                                    <th>عنوان مراسم</th>
                                    <th>میهمانان</th>
                                    <th>وضعیت پخش زنده</th>
                                    <th>وضعیت</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ceremonies.Count()>0)
                                {
                                @foreach (var item in Model.ceremonies)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <img src="~/@item.Image" width="100" />
                                    </td>
                                    <td>@item.CeremonyDateFA</td>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (item.CeremonyGuests.Count() > 0)
                                        {
                                        @foreach (var guest in item.CeremonyGuests)
                                        {
                                            <p>@guest.GuestType:@guest.Guest</p><br />
                                        }
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsLive)
                                        {
                                            <i class="fa fa-check fa-2x text-success"></i> }
                                        else
                                        {
                                            <i class="fa fa-remove fa-2x text-danger"></i>}
                                    </td>
                                    <td>
                                        @if (item.CeremonyDate > DateTime.Now)
                                        {
                                            <p class="btn btn-warning btn-rounded waves-effect waves-light m-b-5">برگزار نشده</p>
                                        }
                                        else if (item.CeremonyDate < DateTime.Now)
                                        {
                                            <p class="btn btn-primary btn-rounded waves-effect waves-light m-b-5">برگزار شده</p>
                                        }
                                        else
                                        {
                                            <p class="btn btn-success btn-rounded waves-effect waves-light m-b-5"> درحال برگزاری</p>
                                        }
                                    </td>
                                </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">$(document).ready(function () {
            $('#datatable').dataTable();
        });</script>
}
